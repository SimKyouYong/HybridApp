<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainBody"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D1D3D4" >

    <LinearLayout
        android:id="@+id/bottomview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/bottomMenu2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/tab_bg"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/txt1"
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/new_tab_click"
                android:gravity="center"
                android:text="버튼1"
                android:textColor="#000000" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#D3D3D3" />

            <Button
                android:id="@+id/txt2"
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/new_tab_click"
                android:gravity="center"
                android:text="버튼2"
                android:textColor="#000000" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#D3D3D3" />

            <Button
                android:id="@+id/txt3"
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/new_tab_click"
                android:gravity="center"
                android:text="버튼3"
                android:textColor="#000000" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#D3D3D3" />

            <Button
                android:id="@+id/txt4"
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/new_tab_click"
                android:gravity="center"
                android:text="버튼4"
                android:textColor="#000000" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#D3D3D3" />

            <Button
                android:id="@+id/txt5"
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/new_tab_click"
                android:gravity="center"
                android:text="버튼5"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomMenu"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/tab_bg"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="35" />

            <ImageButton
                android:id="@+id/prevBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/tab_prev_click" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="35" />

            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/tab_next_click" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="35" />

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/tab_home_click" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="35" />

            <ImageButton
                android:id="@+id/reloadBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/tab_reload_click" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="35" />

            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="30"
                android:background="@drawable/tab_share_click" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="35" />
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottomview1" />

    <View
        android:id="@+id/loadingview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#90000000"
        android:visibility="gone" />

</RelativeLayout>